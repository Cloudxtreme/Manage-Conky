do shell script "/bin/bash -s <<'EOF'

cp /Applications/Utilities/XQuartz.app/Contents/Info.plist /tmp/Info.plist
cp /Applications/Utilities/XQuartz.app/Contents/Info.plist /tmp/Info.plist.backup   # Make a backup file; Just in case

defaults write /tmp/Info.plist LSBackgroundOnly %@

EOF"

do shell script "/bin/bash -s <<'EOF'

rm /Applications/Utilities/XQuartz.app/Contents/Info.plist

mv /tmp/Info.plist /Applications/Utilities/XQuartz.app/Contents

EOF" with administrator privileges
